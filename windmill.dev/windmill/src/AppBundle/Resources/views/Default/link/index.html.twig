{% extends "AppBundle:Default:index.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>Link list</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Author</th>
                    <th>Url</th>
                    <th>Createdat</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for link in links %}
                    <tr>
                        <td><a href="{{ path('link_show', { 'id': link.id }) }}">{{ link.id }}</a></td>
                        <td>{{ link.name }}</td>
                        <td>{{ link.category }}</td>
                        <td>{{ link.author }}</td>
                        <td>{{ link.url }}</td>
                        <td>{% if link.createdAt %}{{ link.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>
                            <a class="btn btn-default btn-sm" href="{{ path('link_show', { 'id': link.id }) }}">show</a>
                            <a class="btn btn-default btn-sm" href="{{ path('link_edit', { 'id': link.id }) }}">edit</a>
                            <a class="btn btn-default btn-sm" href="{{ path('link_delete', { 'id': link.id }) }}">delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('link_new') }}">Create a new entry</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
